<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            background-color: #f4f7fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
        }
        .student-card {
            background-color: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
            overflow: hidden;
        }
        .student-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }
        .profile-section {
            background: linear-gradient(135deg, #42786f 0%, #2575fc 100%);
            padding: 3rem 2rem;
            color: white;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        .profile-section::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 80%);
            transform: rotate(30deg);
        }
        .info-card {
            background-color: #ffffff;
            border-radius: 15px;
            transition: all 0.3s ease-in-out;
            height: 100%;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            padding: 1.5rem;
        }
        .info-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }
        .info-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            background: linear-gradient(135deg, #426472 0%, #0fd1d1 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            transition: all 0.3s ease-in-out;
        }
        .info-card:hover .info-icon {
            transform: scale(1.1);
        }
        .btn-custom {
            border-radius: 30px;
            padding: 0.75rem 2rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            border: none;
        }
        .btn-custom:hover {
            transform: translateY(-3px);
            box-shadow: 0 7px 14px rgba(0, 0, 0, 0.1);
        }
        .btn-primary {
            background: linear-gradient(135deg, #7cb0b9 0%, #2575fc 100%);
        }
        .btn-danger {
            background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
        }
    </style>
</head>
<body>
    <script>
        function logout() {
          Swal.fire({
            title: "Are you sure?",
            text: "Do you really want to log out?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#2575fc",
            cancelButtonColor: "#ff416c",
            confirmButtonText: "Yes, log out",
            cancelButtonText: "Cancel",
            customClass: {
              confirmButton: 'btn btn-primary btn-custom',
              cancelButton: 'btn btn-danger btn-custom'
            },
            buttonsStyling: false
          }).then((result) => {
            if (result.isConfirmed) {
              window.location.href = "/logOut";
            }
          });
        }
    </script>
    <script>
        var successMessage = '<%= success_msg %>';
        var errorMessage = '<%= error_msg %>';
    
        if (successMessage) {
          Swal.fire({
            toast: true,
            icon: 'success',
            title: successMessage,
            position: 'top',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            didOpen: (toast) => {
              toast.addEventListener('mouseenter', Swal.stopTimer);
              toast.addEventListener('mouseleave', Swal.resumeTimer);
            }
          });
        }
        if (errorMessage) {
          Swal.fire({
            toast: true,
            icon: 'warning',
            title: errorMessage,
            position: 'top',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            didOpen: (toast) => {
              toast.addEventListener('mouseenter', Swal.stopTimer);
              toast.addEventListener('mouseleave', Swal.resumeTimer);
            }
          });
        }
    </script>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="student-card">
                    <div class="profile-section mb-4">
                        <h2 class="mb-2"><%= userData.name %></h2>
                        <p class="text-light mb-0">Student</p>
                    </div>
                    <div class="px-4 pb-4">
                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <div class="info-card">
                                    <div class="text-center">
                                        <i class="fas fa-envelope info-icon"></i>
                                        <h5 class="card-title">Email</h5>
                                        <p class="card-text"><%= userData.email %></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-card">
                                    <div class="text-center">
                                        <i class="fas fa-graduation-cap info-icon"></i>
                                        <h5 class="card-title">Class</h5>
                                        <p class="card-text"><%= userData.class %></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-card">
                                    <div class="text-center">
                                        <i class="fas fa-id-badge info-icon"></i>
                                        <h5 class="card-title">Roll Number</h5>
                                        <p class="card-text"><%= userData.roleno %></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-card">
                                    <div class="text-center">
                                        <i class="fas fa-calendar-alt info-icon"></i>
                                        <h5 class="card-title">Joined</h5>
                                        <p class="card-text"><%= new Date(userData.createdAt).toLocaleDateString() %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <a href="/edituser" class="btn btn-primary btn-custom me-3">
                                <i class="fas fa-user-edit me-2"></i>Edit Details
                            </a>
                            <a onclick="logout()" class="btn btn-danger btn-custom">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

